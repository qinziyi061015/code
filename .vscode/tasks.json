{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build active file (MinGW g++)",
            "command": "E:/x86_64-8.1.0-release-posix-seh-rt_v6-rev0/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++14",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "${workspaceFolder}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "MinGW g++ build active file"
        },
        {
            "label": "Run active file",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run with input_bd.txt",
            "type": "shell",
            "command": "\"${fileDirname}\\${fileBasenameNoExtension}.exe\" < \"${workspaceFolder}\\input_bd.txt\"",
            "options": {
                "cwd": "${fileDirname}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run with sample (cmd)",
            "type": "shell",
            "command": "\"${fileDirname}\\${fileBasenameNoExtension}.exe\" < \"${workspaceFolder}\\input_sample.txt\"",
            "options": {
                "cwd": "${fileDirname}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run via batch with sample",
            "type": "shell",
            "command": "${workspaceFolder}\\run_with_input.cmd",
            "args": [
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${workspaceFolder}\\input_sample.txt"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "test",
            "problemMatcher": []
        }
    ]
}